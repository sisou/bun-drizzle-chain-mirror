{
	"name": "bun-drizzle-chain-mirror",
	"module": "index.ts",
	"type": "module",
	"scripts": {
		"fmt": "dprint fmt",
		"lint": "biome lint index.ts src/** db/**",
		"migrate:generate": "drizzle-kit generate:pg --schema db/schema.ts",
		"migrate:up": "bun run db/migrate.ts",
		"migrate": "bun run migrate:generate && bun run migrate:up",
		"seed:testnet": "bun run db/seed-testnet.ts",
		"seed:mainnet": "bun run db/seed-mainnet.ts",
		"db:postprocess": "bun run db/postprocess.ts",
		"start:testnet": "bun run migrate:up && bun run seed:testnet && bun run db:postprocess && bun run index.ts",
		"start:mainnet": "bun run migrate:up && bun run seed:mainnet && bun run db:postprocess && bun run index.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "1.3.3",
		"bun-types": "latest",
		"dprint": "^0.42.5",
		"drizzle-kit": "^0.20.14",
		"pg": "^8.11.5"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@nimiq/utils": "^0.10.1",
		"@sisou/nimiq-ts": "npm:@jsr/sisou__nimiq-ts",
		"drizzle-orm": "^0.30.8",
		"postgres": "^3.4.4"
	}
}
